<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>br.com.spolti</groupId>
  <artifactId>chuck-norris-fact</artifactId>
  <version>1.0.Final</version>
  <build>
    <finalName>chuck-norris-fact</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>br.com.spolti.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.4.0</version>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-jar</argument>
            <argument>target/${project.build.finalName}.jar</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <version.io.undertow>2.0.22.Final</version.io.undertow>
    <version.org.codehaus.jackson.mapper-asl>1.9.13</version.org.codehaus.jackson.mapper-asl>
    <version.maven.javadoc.plugin>2.10.4</version.maven.javadoc.plugin>
    <version.junit>4.12</version.junit>
    <version.com.jboss.resteasy>3.1.3.Final</version.com.jboss.resteasy>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.maven.release.plugin>2.5.3</version.maven.release.plugin>
    <version.com.fasterxml.jackson.core>2.9.9</version.com.fasterxml.jackson.core>
    <version.maven.source.plugin>3.0.1</version.maven.source.plugin>
  </properties>
</project>

